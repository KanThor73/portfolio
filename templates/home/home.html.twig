{% block javascripts %}
    {{ parent() }}
    <script>
        function scrollToSection(id) {
            let section = document.getElementById(id);
            section.scrollIntoView({behavior: "smooth"});
        }

        document.addEventListener('scroll', function () {
            let header = document.getElementsByClassName('header-content')[0];
            let profilePicture = document.getElementById('profile_picture');

            if (window.scrollY > 50) {
                profilePicture.style.display = 'none';
                header.style.justifyContent = 'center';
            } else {
                profilePicture.style.display = 'block';
                header.style.justifyContent = 'space-between';
            }
        });

        let projectContainer = document.querySelector('.achievements');
        let projects = document.querySelectorAll('.project');
        let currentIndex = 0;

        projects[currentIndex].classList.add('active');

        // Fonction pour passer au projet suivant
        function nextProject() {
            projects[currentIndex].classList.remove('active');
            currentIndex = (currentIndex + 1) % projects.length;
            projects[currentIndex].classList.add('active');
            updateTransform();
        }

        // Fonction pour passer au projet précédent
        function prevProject() {
            projects[currentIndex].classList.remove('active');
            currentIndex = (currentIndex - 1 + projects.length) % projects.length;
            projects[currentIndex].classList.add('active');
            updateTransform();
        }

        // Fonction pour mettre à jour la transformation de projectContainer
        function updateTransform() {
            // let project = document.querySelector('.active');
            // let transformValue = -currentIndex * 10 + 'rem';
            // project.style.transform = 'translateX(' + transformValue + ')';
        }

        // Ajoutez des écouteurs d'événements pour les contrôles de carrousel
        document.getElementById('prev').addEventListener('click', prevProject);
        document.getElementById('next').addEventListener('click', nextProject);
    </script>
{% endblock %}
